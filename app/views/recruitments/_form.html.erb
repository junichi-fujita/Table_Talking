<div class="modal-dialog" role="document">
  <div class="modal-content">
    <%= form_with(model: recruitment, id: "recruitment_form") do |form| %>
      <div class="modal-header">
        <h5 class="modal-title"><%= title %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <%= form.label :title %><span><small>(30文字まで)</small></span><span class="badge badge-danger ml-1">必須</span>
            <%= form.text_field :title, class: "form-control", placeholder: "(例)ゴブリン退治" %>
          </div>
          <div class="form-group">
            <%= form.label :content %><span><small>(255文字まで)</small></span><span class="badge badge-danger ml-1">必須</span>
            <%= form.text_area :content, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.label :appropriate_level %><span><small>(半角英数字のみ)</small></span><span class="badge badge-danger ml-1">必須</span>
            <%= form.number_field :appropriate_level, min:1, max:200, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.label :start_time %><span class="badge badge-danger ml-1">必須</span>
            <%= form.datetime_select :start_time, { default: Date.today + 1.day} %>
          </div>
          <div class="form-group">
            <%= form.label :play_time %><span><small>(半角英数字のみ)</small></span><span class="badge badge-danger ml-1">必須</span>
            <%= form.number_field :play_time, min:1, max:100, class: "form-control", placeholder: "1時間単位でご記入ください" %>
          </div>
      </div>
        <div class="modal-footer actions">
          <%= form.submit class: "btn btn-outline-dark"%>
        </div>
      </form>
    <% end %>
  </div>
</div>

<script>
  // バリデーション
  $('#recruitment_form').validate({
    rules: {
      "recruitment[title]": {
        required: true,
        maxlength: 30
      },
      "recruitment[content]": {
        required: true,
        maxlength: 255
      },
      "recruitment[appropriate_level]": {
        required: true
      },
      "recruitment[play_time]": {
        required: true,
      }
    }
  })
</script>