<div class="container">
  <h2>新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-group">
      <div class="field">
        <%= f.label User.human_attribute_name("name") %><br />
        <%= f.text_field :name, autofocus: true, class: "form-control", id: "name" %>
      </div>

      <div class="field">
        <%= f.label User.human_attribute_name("email") %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        (<%= @minimum_password_length %>文字以上)
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "password form-control" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "登録", class: "btn btn-primary mt-2" %>
      </div>
    </div>
  <% end %>
   

  <%#= render "devise/shared/links" %>
</div>
