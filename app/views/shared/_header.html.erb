<div class="d-flex justify-content-between align-items-center">
  <div>
    <%= link_to "Table Talking", root_path, class: "h1 text-decoration-none" %>
  </div>
  <div>
    <% if user_signed_in? %>
      <strong><%#= link_to current_user.name, pages_show_path %></strong>
      <%= link_to 'セッション一覧' , recruitments_path %>
      <%= link_to 'マイアカウント', user_path(current_user), class: "ml-2" %>
      <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "ml-2" %>
    <% else %>
      <%= link_to '新規登録', new_user_registration_path %>
      <%= link_to 'ログイン', new_user_session_path, class: "log_in ml-2"%>
    <% end %>
  </div>
</div>